define PROJECT_INFO
Workflow Version:  \033[1;32m$(VERSION)\033[0m

Docker
======

    Basename:      \033[32m$(DOCKER_BASENAME)\033[0m
    Config files:  \033[33m$(DOCKER_CONFIG_FILES)\033[0m
    Data dir:      \033[33m$(DOCKER_DATA_DIR)\033[0m

    Shell:         \033[34m$(DOCKER_SHELL)\033[0m
    Host:          \033[34m$(DOCKER_HOST)\033[0m
    Port prefix:   \033[34m$(DOCKER_PORT_PREFIX)\033[0m

    Database URL:  \033[33m$(DB_URL)\033[0m

endef
export PROJECT_INFO

# DOCKER! Nem docker-compose! DB import-export esetén fontos, mert csak azzal működik.
define DOCKER_EXEC
docker exec -i $$($(CMD_DOCKER_BASE) ps -q $(1)) $(2)
endef

.PHONY: info
info::
	@echo "$$PROJECT_INFO"

# List all targets
.PHONY: list
list:
	$(CMD_MAKE) -p | awk -F':' '/^[a-zA-Z0-9][^$$#\/       =]*:([^=]|$$)/ {split($$1,A,/ /);for(i in A)print A[i]}' | grep -v '__$$' | sort

# @todo Lehessen inkább paraméterezni, hogy hova kerüljön a fájl vagy mi legyen a neve.
.PHONY: dbdump
dbdump: up
	$(call DOCKER_EXEC,$(DOCKER_DB_NAME),\
		/usr/bin/mysqldump -u root --password=$(DB_PASSWORD) --add-drop-database -B $(DB_NAME)) > dbdump.sql
    # Sajnos beleírja, hogy 'Warning: Using a password on the command line interface can be insecure.', ezt kivágjuk
	dd if=dbdump.sql of=dbdump.sql~ bs=1 skip=$$(head -n $$(head dbdump.sql | grep -n ^Warning: | cut -d: -f1) dbdump.sql | wc -c)
	mv dbdump.sql~ dbdump.sql
	@echo "\n\033[32m✔ The \033[33mdbdump.sql\033[32m has been created.\033[0m"

.PHONY: dbimport
dbimport: up
	cat dbdump.sql | $(call DOCKER_EXEC,$(DOCKER_DB_NAME),\
		/usr/bin/mysql -u root --password=$(DB_PASSWORD) $(DB_NAME))

# DOCKER COMMANDS
.PHONY: __docker_up
__docker_up:
	$(CMD_DOCKER_BASE) up -d

.PHONY: __docker_down
__docker_down:
	$(CMD_DOCKER_BASE) down

.PHONY: __docker_connect
__docker_connect:
	$(CMD_DOCKER_BASE) exec --user $(DOCKER_USER) $(ARG)

.PHONY: __docker_enter
__docker_enter: up
	$(CMD_DOCKER_BASE) exec --user $(DOCKER_USER) $(DOCKER_CLI_NAME) $(DOCKER_SHELL)

.PHONY: __docker_rebuild
__docker_rebuild: down
	$(CMD_DOCKER_BASE) build --no-cache $(DOCKER_CLI_NAME)

.PHONY: __docker_ps
__docker_ps:
	$(CMD_DOCKER_BASE) ps $(ARGS)

.PHONY: __docker_docker-conig
__docker_docker-config:
	$(CMD_DOCKER_BASE) config

# CONTAINER COMMANDS
.PHONY: __container_php
__container_php:
	$(CMD_DOCKER_RUN_CLI) php $(ARGS)

